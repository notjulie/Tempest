<Window x:Class="AsteroidsWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asteroids" Height="720" Width="650" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Processor Status: "/>
                    <TextBlock Name="processorStatus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Processor speed: "/>
                    <TextBlock Name="processorSpeedText"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Ellipse Name="buttonOnePlayerStart" Width="20" Height="20" Margin="5" Fill="Black"/>
            <Ellipse Name="buttonTwoPlayerStart" Width="20" Height="20" Margin="5" Fill="Black"/>
        </StackPanel>
        <Viewbox Stretch="Uniform">
            <Canvas Name="canvas" Height="69536" Width="70536" Background="Black" ClipToBounds="True">
            </Canvas>
        </Viewbox>
    </DockPanel>
</Window>
